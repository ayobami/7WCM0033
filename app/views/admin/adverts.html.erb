<% page_title = "All Adverts" %>

<div id="content" class="padding-20">
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>



		<div class="panel-body mr-20 ml-20">
			<div class="row">
					<a class="btn btn-small btn-default pull-left" href="/admin/createadvert"><i class="fa fa-newspaper-o"></i> New Entry</a>
				<br/><br/>
				<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>SN</th>
									<th> Title </th>
									<th> Date</th>
									<th> Creator</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% if @alladvert != nil  %>
								<% count=1%>
								<% for entry in @alladvert
									person =Person.find_by(user_id: entry.user_id)
									full_name=person.last_name + " " +person.first_name
								%>
								<tr>
									<td><%= count%></td>
									<td> <%= entry.title%> </td>
									<td> <%= entry.advert_date%> </td>
									<td> <%= full_name%> </td>
									<td>
										 <a class="btn btn-small btn-default" 
                                                href="/admin/editadvert?id=<%= entry.id%>"><i class="fa fa-edit"></i> Edit</a>
                                                ||
												<a class="btn btn-small btn-default" 
                                                href="/admin/deleteadvert?id=<%= entry.id%>"><i class="fa fa-thrash"></i> Delete</a>
									</td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>