<% page_title = "Audit Trail" %>

<div id="content" class="padding-20">
	<%= form_for(:audit_trail_dto, :url => {:controller => 'admin', :action => 'audit_trail'}) do |f| %>
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>



		<div class="panel-body mr-20 ml-20">
			<div class="row">
					<div class="col-md-12 col-sm-12">

						<label>Start Date *</label>
						</br>
						<%= date_select("audit_trail_dto", "start_date" , start_year: 2017)%>
						</br>
						<label>End Date *</label>
						</br>
						<%= date_select("audit_trail_dto", "end_date" , start_year: 2017)%>
						</br>
						</br>
								<button type="submit" class="btn btn-success">
									<i class="fa fa-refresh"></i> Load
								</button>
								</br>
						</br>
					</div>
					<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>SN</th>
									<th> Object </th>
									<th> Action </th>
									<th> Changes </th>
									<th> Date </th>
								</tr>
							</thead>
							<tbody>
								<% if @audit_trails != nil  %>
								<% count=1%>
								<% for audit_trail in @audit_trails%>
								<tr>
									<td><%= count%></td>
									<td> <%= audit_trail.auditable_type%> </td>
									<td> <%= audit_trail.action%> </td>
									<td> <%= audit_trail.audited_changes%> </td>
									<td> <%= audit_trail.created_at%> </td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>