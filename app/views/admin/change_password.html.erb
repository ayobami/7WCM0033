<% page_title = "Change Password" %>

<div id="content" class="padding-20">
	<%= form_for(:change_password_dto, :url => {:controller => 'admin', :action => 'change_password'}) do |f| %>
	<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>

		<% if flash[:alert]  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Please fill all the required fields marked with *
			<br/>
			<br/>
			<% for message_error in @change_password_dto.errors.full_messages %>
			<li>
				* <%= message_error %>
			</li>
			<% end %>
		</div>
		<% end %>

		<% if flash[:notice]  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Invalid old password
		</div>
		<% end %>

		<% if flash[:message]  %>
		<br/>
		<div class="alert alert-success noborder text-center weight-400 nomargin noradius">
			Password Changed Successfully!!!
		</div>
		<% end %>

		<div class="panel-body">
			<div class="row">
				<div class="form-group">
					<div class="col-md-4 col-sm-4"></div>
					<div class="col-md-4 col-sm-4">

						<label>Old Password *</label>
						<%= password_field("change_password_dto", "old_password", {class: 'form-control required'})%>

						</br>
						<label>New Password *</label>
						<%= password_field("change_password_dto", "new_password", {class: 'form-control required'})%>

						</br>

						<label>Confirm Password *</label>
						<%= password_field("change_password_dto", "password_confirmation", {class: 'form-control required'})%>

				
								<br />
								<button type="reset" class="btn btn-default">Reset</button>
								<button type="submit" class="btn btn-success ml-20">
									<i class="fa fa-edit"></i> Submit
								</button>
								<br />
								<br />
							
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>