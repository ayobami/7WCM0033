<% page_title = "Agency's Staff" %>

<div id="content" class="padding-20">
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>



		<div class="panel-body mr-20 ml-20">
			<div class="row">
				
				<a class="btn btn-small btn-default pull-left" href="/admin/registration"><i class="fa fa-plus"></i> Create User</a>
				<br/><br/>
				<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>SN</th>
									<th> Full Name </th>
									<th> Email Address</th>
									<th>Status</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% if @all_users != nil  %>
								<% count=1%>
								<% for user in @all_users
									person =Person.find_by(user_id: user.id)
									full_name=person.last_name + " " +person.first_name
								%>
								<tr align="left">
									<td><%= count%></td>
									<td> <%= full_name%> </td>
									<td> <%= user.email_address%> </td>
									<td> 
										<% if user.status == 284  %>
									    <span class="label label-info">Active</span>
                                     <% elsif user.status == 285  %>
										 <span class="label label-warning">Inactive</span>
								    <% end %>
										</td>
									<td>
									<% if user.status == 284  %>
										 <a class="btn btn-small btn-default" 
                                                href="/admin/deactivatestaff?id=<%= user.id%>"><i class="fa fa-edit"></i> Deactivate</a>
                                     <% elsif user.status == 285  %>
										 <a class="btn btn-small btn-default" 
                                                href="/admin/activatestaff?id=<%= user.id%>"><i class="fa fa-edit"></i> Activate</a>
								    <% end %>
									</td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>