<% page_title = "New Event" %>
<div id="content" class="padding-20">
	<%= form_for(:event_dto, :url => {:controller => 'admin', :action => 'create_event'}) do |f| %>
	<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>

		<% if flash[:alert]  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Please fill all the required fields marked with *
			<br/>
			<br/>
			<% for message_error in @event_dto.errors.full_messages %>
			<li>
				* <%= message_error %>
			</li>
			<% end %>
		</div>
		<% end %>

		<% if flash[:notice]  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Event not saved
		</div>
		<% end %>

		<% if flash[:message]  %>
		<br/>
		<div class="alert alert-success noborder text-center weight-400 nomargin noradius">
			Event Saved Successfully!!!
		</div>
		<% end %>

		<div class="panel-body">
			<div class="row">
				<div class="form-group">
						<div class="col-md-1 col-sm-1"></div>
					<div class="col-md-10 col-sm-10">

						
						<label>Title *</label>
						<%= text_field("event_dto", "name", {class: 'form-control required'})%>

						</br>
						
						<label>Event Date</label>
						</br></br>
						<%= date_select("event_dto", "event_date" , start_year: 2017)%>
						</br></br>
						<label>Text *</label>
						</br>
						</br>
						<%= cktext_area("event_dto", "description", {class: 'tinymce required', rows: 25, cols: 96 })%>
				
								<br /><br />
								<button type="reset" class="btn btn-default">Reset</button>
								<button type="submit" class="btn btn-success ml-20">
									<i class="fa fa-edit"></i> Submit
								</button>
								<br />
								<br />
							
						</div><div class="col-md-1 col-sm-1"></div>
					</div>

				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>