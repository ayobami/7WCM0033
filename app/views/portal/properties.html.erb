<% page_title = "Properties" %>

<div id="content" class="padding-20">
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>

<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			There is an ongoing mortgage on this property which cannot be removed 
			until the payment condition is satisfied
		</div>

		<div class="panel-body mr-20 ml-20">
			<div class="row">
					<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th width="4%">SN</th>
									<th width="10%"> Number </th>
									<th width="6%"> Rooms </th>
									<th width="6%"> Baths </th>
									<th width="10%"> Price ( &#8358; )</th>
									<th width="10%"> Status </th>	
									<th> Address </th>
																	
									<th width="29%"></th>
								</tr>
							</thead>
							<tbody>
								<% if @all_properties != nil  %>
								<% count=1%>
								<% for property in @all_properties%>
								<%address=Address.find_by(id: property.address_id)
								 dictionary=Dictionary.find_by(id: property.property_status)
								%> 
								<tr>
									<td><%= count%></td>
									<td> <%= property.property_number%> </td>
									<td> <%= property.number_of_rooms%> </td>
									<td> <%= property.number_of_baths%> </td>
									<td> <%= property.per_unit_price%> </td>
									<td> 
										<%if property.property_status == 390%>
										<span class="label label-warning"> <%= dictionary.label%> </span>
										<%else%>
										<span class="label label-info"> <%= dictionary.label%> </span>
										<%end%>
									</td>
									<td> 
									<%= address.street1%> .  <%= address.zip_code%>.  <%= address.city%>
					               </td>
									<td>
										<%if property.property_status == 390%>
										 <a class="btn btn-small btn-default" 
                                                href="/portal/removemortgage?id=<%= property.id%>"><i class="fa fa-remove"></i> Remove Mortgage</a>
                                                ||
                                         <%else%>       
                                                  <a class="btn btn-small btn-default" 
                                                href="/portal/editproperty?id=<%= property.id%>"><i class="fa fa-edit"></i> Edit</a>
                                                ||
										<%end%>
                                              
                                                <a class="btn btn-small btn-default" target="new" href="/portal/evaluationreport?id=<%=property.id%>"> <i class="fa fa-certificate"></i> Valuation</a>	
								    </td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>