<% page_title = "Mortgages" %>

<div id="content" class="padding-20">
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>



		<div class="panel-body mr-20 ml-20">
			<div class="row">
					<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th width="5%">SN</th>
									<th width="10%"> Number </th>
									<th width="10%"> Owner </th>
									<th width="10%"> Property </th>
									<th width="10%"> </th>
									<th> Address </th>
									<th width="27%"></th>
								</tr>
							</thead>
							<tbody>
								<% if @mortgages != nil  %>
								<% count=1%>
								<% for mortgage in @mortgages%>
								<%address=Address.find_by(id: property.address_id)%> 
								<tr>
									<td><%= count%></td>
									<td> <%= property.property_number%> </td>
									<td> <%= property.number_of_rooms%> </td>
									<td> <%= property.number_of_baths%> </td>
									<td> <%= property.per_unit_price%> </td>
									<td> 
									<%= address.street1%> .  <%= address.zip_code%>.  <%= address.city%>
					               </td>
									<td>
									<a class="btn btn-small btn-default" href="/home/property?id=<%= property.id%>" target="new">
										<i class="fa fa-search"></i> View</a>
                                                ||
                                                <a class="btn btn-small btn-default" 
                                                href="/portal/editproperty?id=<%= property.id%>"><i class="fa fa-edit"></i> Edit</a>
                                                ||
                                                <a class="btn btn-small btn-default" target="new" href="/portal/evaluationreport?id=<%=property.id%>">Valuation</a>	
								    </td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>