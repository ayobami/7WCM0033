					<div class="body-content">
						<br />

						<br />
						<br />
						<%= yield %>
						<hr />
						<footer>
							<p class="white">
								&copy; 2017 - Ayobami Adewole (14172658)
							</p>
						</footer>
					</div>
				</div>
			</div>
		</div>
