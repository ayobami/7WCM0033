			function goBack() {
				window.history.back();
			}


			$(document).ready(function() {
				//$(".datepicker").datepicker({
				//	dateFormat : 'dd/mm/yy'
				//});
				$('#dataTable').DataTable({
					deferRender : false,
					scrollY : 400,
					scrollCollapse : true,
					scroller : true
				});
			});
		</script>

