<% page_title = "Chat with a sales representative" %>

<div id="content" class="padding-20">
	<%= form_for(:contact_dto, :url => {:controller => 'home', :action => 'contact'}) do |f| %>
	<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>

		
		<div class="panel-body center">
			<div class="center">
				<div class="col-md-3 col-sm-3">
					</div>
				<div class="col-md-6 col-sm-6">
					<label>Surname *</label>
						<%= text_field("contact_dto", "surname", {class: 'form-control required'})%>
						</br>

						<label>First Name *</label>
						<%= text_field("contact_dto", "first_name", {class: 'form-control required'})%>
						</br>

					<label>Email Address</label>
					<%= email_field("contact_dto", "email_address", {class: 'form-control required'})%>
					<br/>
					<label>Message *</label>
						<%= text_area("contact_dto", "message", {class: 'form-control required'})%>
					<br/>
					<button type="reset" class="btn btn-default">Reset</button>
								<button type="submit" class="btn btn-success ml-20">
						<i class="fa fa-envelope"></i> Submit
					</button>
					<br/>
					<br/>
				</div>
				<div class="col-md-3 col-sm-3">
					</div>
			</div>
		</div>
	</div>
</div>
<% end %>
</div>