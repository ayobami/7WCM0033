<% page_title = "Chat with Our Sales Person" %>

<div id="content" class="padding-20">
	<%= form_for(:chat_request_dto, :url => {:controller => 'home', :action => 'chat_request'}) do |f| %>
	<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>


		<% if flash[:alert]!= nil  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Please fill all the required fields marked with *
			<br/>
			<br/>
			<% for message_error in @chat_request_dto.errors.full_messages %>
			<li>
				* <%= message_error %>
			</li>
			<% end %>
		</div>
		<% end %>

		<% if flash[:notice]!= nil  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Something went wrong
		</div>
		<% end %>

		<div class="panel-body center">
			<div class="center">
				<div class="col-md-3 col-sm-3"></div>
				<div class="col-md-6 col-sm-6">
					<label>Full Name *</label>
					<%= text_field("chat_request_dto", "full_name", {class: 'form-control required'})%>
					</br>

					<label>Email Address</label>
					<%= email_field("chat_request_dto", "email_address", {class: 'form-control required'})%>
					<br/>
					<button type="reset" class="btn btn-default">
						Reset
					</button>
					<button type="submit" class="btn btn-success ml-20">
						<i class="fa fa-envelope"></i> Start
					</button>
					<br/>
					<br/>
				</div>
				<div class="col-md-3 col-sm-3"></div>
			</div>
		</div>
	</div>
</div>
<% end %>
</div>