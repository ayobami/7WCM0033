<% page_title = "Registered Interests" %>

<div id="content" class="padding-20">
<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>



		<div class="panel-body mr-20 ml-20">
			<div class="row">
				
				<p>
						<table id="dataTable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>SN</th>
									<th> Rooms </th>
									<th> Baths</th>
									<th> Min Price</th>
									<th>Max Price</th>
									<th>Date</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% if @interests != nil  %>
								<% count=1
								for entry in @interests%>
								<tr>
									<td><%= count%></td>
									<td> <%= entry.number_of_rooms%> </td>
									<td> <%= entry.number_of_baths%> </td>
									<td> <%= entry.price_range_start%> </td>
									<td> <%= entry.price_range_end%> </td>
									<td> <%= entry.search_date%> </td>
									<td>
										 
												<a class="btn btn-small btn-default" 
                                                href="/home/deleteinterest?id=<%= entry.id%>"><i class="fa fa-thrash"></i> Delete</a>
									</td>
								</tr>
								<% count+=1%>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</p>

				</div>
			</div>
		</div>
	</div>
</div>