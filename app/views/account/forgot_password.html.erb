<% page_title = "Forgot Password" %>

<div id="content" class="padding-20">
	<%= form_for(:form, :url => {:controller => 'account', :action => 'forgot_password'}) do |f| %>
	<div class="panel">
		<div class="panel-heading">
			<br/>
			<h3 class="text-muted lead"><span class="logo-dec"><%= page_title%></span></h3>
			<hr />
		</div>

		<% if flash[:message]  %>
		<br/>
		<div class="alert alert-success noborder text-center weight-400 nomargin noradius">
			Please check your email address for account reset link!!!
		</div>
		<% end %>

		<% if flash[:notice]  %>
		<br/>
		<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
			Invalid email address
		</div>
		<% end %>

		<div class="panel-body center">
			<div class="center">
				<div class="col-md-4 col-sm-4">
					</div>
				<div class="col-md-4 col-sm-4">
					<label>Email Address</label>
					<%= email_field("form", "email", {class: 'form-control required'})%>
					<br/>
					<br/>
					<button type="submit" class="btn btn-success">
						<i class="fa fa-refresh"></i> Reset
					</button>
					<br /><br />
                            <a href="/home/login">Login to your account</a> <br />
					<br/>
					<br/>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
</div>